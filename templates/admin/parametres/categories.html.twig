{% extends 'admin/layout.html.twig' %}

{% block title %}Liste des devises{% endblock %}

{% block stylesheets %}
<!--begin::Vendor Stylesheets(used for this page only)-->
<link href="{{asset('assets/plugins/custom/datatables/datatables.bundle.css')}}" rel="stylesheet" type="text/css"/>
<!--end::Vendor Stylesheets-->
{% endblock %}

{% block toolbar_wrapper_title %}
<div
    class="page-title py-2 py-sm-0 d-flex flex-column justify-content-center me-3 "> 
    <!--begin::Title-->
    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
        Liste des devises
    </h1>
    <!--end::Title-->

    <!--begin::Breadcrumb-->
    <ul
        class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
        <!--begin::Item-->
        <li class="breadcrumb-item text-muted">
            <a href="{{path('dash')}}" class="text-muted text-hover-primary">
                Dashboard
            </a>
        </li>
        <!--end::Item-->
        <!--begin::Item-->
        <li class="breadcrumb-item">
            <span class="bullet bg-gray-500 w-5px h-2px"></span>
        </li>
        <!--end::Item-->

        <!--begin::Item-->
        <li class="breadcrumb-item text-muted">
            devises
        </li>
        <!--end::Item-->

    </ul>
    <!--end::Breadcrumb-->
</div>
{% endblock %}

{% block body %}
	<div
		id="kt_app_content" class="app-content  flex-column-fluid ">

		<!--begin::Content container-->
		<div
			id="kt_app_content_container" class="app-container  container-xxl ">

			<!--begin::Category-->
			<div
				class="card card-flush">
				<!--begin::Card header-->
				<div
					class="card-header align-items-center py-5 gap-2 gap-md-5">
					<!--begin::Card title-->
					<div
						class="card-title">
						<!--begin::Search-->
						<div class="d-flex align-items-center position-relative my-1">
							<i class="ki-outline ki-magnifier fs-3 position-absolute ms-4"></i>
							<input type="text" data-kt-ecommerce-category-filter="search" class="form-control form-control-solid w-250px ps-12" placeholder="Rechercher une devise"/>
						</div>
						<!--end::Search-->
					</div>
					<!--end::Card title-->

					<!--begin::Card toolbar-->
					<div
						class="card-toolbar">
						<div
							class="d-flex justify-content-end" data-kt-param-table-toolbar="base">
							<!--begin::Add customer-->
							<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#kt_modal_add_param">
								Ajouter une devise
							</button>
							<!--end::Add customer-->
						</div>

						<!--begin::Group actions-->
						<div class="d-flex justify-content-end align-items-center d-none" data-kt-param-table-toolbar="selected" data-deleted-root="">
							<div class="fw-bold me-5">
								<span class="me-2" data-kt-param-table-select="selected_count"></span>
								Sélectionné(s)
							</div>

							<button type="button" class="btn btn-danger" data-kt-param-table-select="delete_selected">
								Supprimer la sélection
							</button>
						</div>
						<!--end::Group actions-->
					</div>
					<!--end::Card toolbar-->
				</div>
				<!--end::Card header-->

				<!--begin::Card body-->
				<div
					class="card-body pt-0">

					<!--begin::Table-->
					<table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_ecommerce_category_table">
						<thead>
							<tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
								<th class="w-10px pe-2">
									<div class="form-check form-check-sm form-check-custom form-check-solid me-3">
										<input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_ecommerce_category_table .form-check-input" value="0"/>
									</div>
								</th>
								<th class="min-w-250px">Categories</th>
								<th class="min-w-150px">Valeur</th>
								<th class="text-end min-w-70px">Actions</th>
							</tr>
						</thead>
						<tbody class="fw-semibold text-gray-600">
                            {% for categorie in categories %}
							<tr>
								<td>
									<div class="form-check form-check-sm form-check-custom form-check-solid">
										<input class="form-check-input" type="checkbox" value="{{devise.id}}"/>
									</div>
								</td>
								<td>
									<div
										class="d-flex align-items-center">
										<!--begin::Thumbnail-->
										<a href="javascript:;" class="symbol symbol-50px" data-bs-param="{{devise.id}}" data-bs-toggle="modal" data-bs-target="#kt_modal_update_param">
											<span class="symbol-label" style="background-image:url({{asset('assets/media/preview/blank-image.png')}});"></span>
										</a>
										<!--end::Thumbnail-->

										<div
											class="ms-5">
											<!--begin::Title-->
											<a href="javascript:;" class="text-gray-800 text-hover-primary fs-5 fw-bold mb-1" data-kt-ecommerce-category-filter="category_name" data-bs-param="{{devise.id}}" data-bs-toggle="modal" data-bs-target="#kt_modal_update_param">{{devise.libelle}}</a>
											<!--end::Title-->
										</div>
									</div>
								</td>
								<td>
									<!--begin::Badges-->
									<div class="badge badge-light-{{random(['success', 'primary', 'info'])}}">{{devise.valeur}}</div>
									<!--end::Badges-->
								</td>
								<td class="text-end">
									<a href="#" class="btn btn-sm btn-light btn-active-light-primary btn-flex btn-center" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
										Actions
										<i class="ki-outline ki-down fs-5 ms-1"></i>
									</a>
									<!--begin::Menu-->
									<div
										class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
										<!--begin::Menu item-->
										<div class="menu-item px-3">
											<a href="javascript:;" class="menu-link px-3" data-bs-param="{{devise.id}}" data-bs-toggle="modal" data-bs-target="#kt_modal_update_param">
												Modifier
											</a>
										</div>
										<!--end::Menu item-->

										<!--begin::Menu item-->
										<form class="menu-item px-3" method="post" action="{{ path('devises_delete', {'id': devise.id}) }}">
											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ devise.id) }}">
											<a href="#" class="menu-link px-3" data-kt-ecommerce-category-filter="delete_row">
												Supprimer
											</a>
										</form>
										<!--end::Menu item-->
									</div>
									<!--end::Menu-->
								</td>
							</tr>
                            {% endfor %}
						</tbody>
						<!--end::Table body-->
					</table>
					<!--end::Table-->
				</div>
				<!--end::Card body-->
			</div>
			<!--end::Category-->

			<!--begin::Modals-->
			<!--begin::Modal - Add Parametre-->
			<div
				class="modal fade" id="kt_modal_add_param" tabindex="-1" aria-hidden="true"> <!--begin::Modal dialog-->
				<div
					class="modal-dialog modal-dialog-centered mw-650px">
					<!--begin::Modal content-->
					<div
						class="modal-content">
						<!--begin::Modal header-->
						<div
							class="modal-header">
							<!--begin::Modal title-->
							<h2 class="fw-bold">Ajouter une devise</h2>
							<!--end::Modal title-->

							<!--begin::Close-->
							<div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-param-modal-action="close">
								<i class="ki-outline ki-cross fs-1"></i>
							</div>
							<!--end::Close-->
						</div>
						<!--end::Modal header-->

						<!--begin::Modal body-->
						<div
							class="modal-body scroll-y mx-5 mx-xl-15 my-7">
							<!--begin::Form-->
							{# <form id="kt_modal_add_param_form" class="form" action="#"> #}
                            {{ form_start(new_categ, {'attr': {'id': 'kt_modal_add_param_form', 'class': 'form'}}) }}
								<!--begin::Input group-->
								<div
									class="fv-row mb-7">
									<!--begin::Label-->
									<label class="fs-6 fw-semibold form-label mb-2">
										<span class="required">Nom</span>
									</label>
									<!--end::Label-->

									<!--begin::Input-->
									{# <input class="form-control form-control-solid" placeholder="Enter a permission name" name="permission_name"/> #}
                                    {{ form_widget(new_categ.libelle, {'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Entrer un nom'}}) }}
								    <!--end::Input-->
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div
									class="fv-row mb-10">
									<!--begin::Label-->
									<label class="fs-5 fw-bold form-label mb-2">
										<span class="required">Valeur</span>
									</label>
									<!--end::Label-->

									<!--begin::Input-->
									{{ form_widget(new_categ.valeur, {'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Entrer une valeur'}}) }}
								<!--end::Input-->
								</div>
								<!--end::Input group-->

								<!--begin::Actions-->
								<div class="text-center pt-15">
									<button type="reset" class="btn btn-light me-3" data-kt-param-modal-action="cancel">
										Annuler
									</button>

									<button type="submit" class="btn btn-primary" data-kt-param-modal-action="submit">
										<span class="indicator-label">
											Soumettre
										</span>
										<span class="indicator-progress">
											Veuillez patienter...
											<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
										</span>
									</button>
								</div>
								<!--end::Actions-->
                            {{ form_end(new_categ) }}
							{# </form> #}
							<!--end::Form-->
						</div>
						<!--end::Modal body-->
					</div>
					<!--end::Modal content-->
				</div>
				<!--end::Modal dialog-->
			</div>
			<!--end::Modal - Add Parametre-->
			<!--begin::Modal - Update Parametre-->
			<div
				class="modal fade" id="kt_modal_update_param" tabindex="-1" aria-hidden="true">
				<!--begin::Modal dialog-->
				<div
					class="modal-dialog modal-dialog-centered mw-650px">
					<!--begin::Modal content-->
					<div
						class="modal-content">
						<!--begin::Modal header-->
						<div
							class="modal-header">
							<!--begin::Modal title-->
							<h2 class="fw-bold">Modification d'une devise</h2>
							<!--end::Modal title-->

							<!--begin::Close-->
							<div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-param-modal-action="close">
								<i class="ki-outline ki-cross fs-1"></i>
							</div>
							<!--end::Close-->
						</div>
						<!--end::Modal header-->

						<!--begin::Modal body-->
						<div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
							<!--begin::Form-->
							<form
								id="kt_modal_update_param_form" class="form" action="{{path('devises_edit')}}" method="POST"> <!--begin::Input group-->
								<div
									class="fv-row mb-7">
									<!--begin::Label-->
									<label class="fs-6 fw-semibold form-label mb-2">
										<span class="required">Nom</span>

										<span class="ms-2">
											<i class="ki-outline ki-information fs-7"></i>
										</span>
									</label>
									<!--end::Label-->

									<!--begin::Input-->
									<input type="hidden" name="param_id"/>
									<input class="form-control form-control-solid" placeholder="Entrer un nom" name="param_name"/>
								<!--end::Input-->
								</div>
								<!--end::Input group-->
								
								<!--begin::Input group-->
								<div
									class="fv-row mb-10">
									<!--begin::Label-->
									<label class="fs-5 fw-bold form-label mb-2">
										<span class="required">Valeur</span>
									</label>
									<!--end::Label-->

									<!--begin::Input-->
									<input class="form-control form-control-solid" placeholder="Entrer une valeur" name="param_valeur"/>
								<!--end::Input-->
								</div>
								<!--end::Input group-->

								<!--begin::Actions-->
								<div class="text-center pt-15">
									<button type="reset" class="btn btn-light me-3" data-kt-param-modal-action="cancel">
										Annuler
									</button>

									<button type="submit" class="btn btn-primary" data-kt-param-modal-action="submit">
										<span class="indicator-label">
											Soumettre
										</span>
										<span class="indicator-progress">
											Veuillez patienter...
											<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
										</span>
									</button>
								</div>
								<!--end::Actions-->
							</form>
							<!--end::Form-->
						</div>
						<!--end::Modal body-->
					</div>
					<!--end::Modal content-->
				</div>
				<!--end::Modal dialog-->
			</div>
			<!--end::Modal - Update Parametre-->
			<!--end::Modals-->
		</div>
		<!--end::Content container-->
	</div>
{% endblock %}

{% block javascripts %}
<!--begin::Vendors Javascript(used for this page only)-->
<script src="{{asset('assets/plugins/custom/datatables/datatables.bundle.js')}}"></script>
<!--end::Vendors Javascript-->
<!--begin::Custom Javascript(used for this page only)-->
<script src="{{asset('assets/js/custom/apps/ecommerce/catalog/categories.js')}}"></script>
<script src="{{asset('assets/js/custom/apps/ecommerce/catalog/add-category.js')}}"></script>
<script src="{{asset('assets/js/custom/apps/ecommerce/catalog/update-category.js')}}"></script>
<!--end::Custom Javascript-->
<script type="text/javascript">

const editModal = document.getElementById('kt_modal_update_param');
editModal.addEventListener('show.bs.modal', event => {
	var param_id = event.relatedTarget.getAttribute('data-bs-param');
	{% for devise in devises %}
	if (param_id == "{{devise.id}}") {
		editModal.querySelector('input[name=param_id]').value = "{{devise.id}}";
		editModal.querySelector('input[name=param_name]').value = "{{devise.libelle}}";
		editModal.querySelector('input[name=param_valeur]').value = `{{devise.valeur}}`;
	}
	{% endfor %}
})

{% for type, messages in app.flashes %}
	{% for message in messages %}
	swal
		.fire({
			text: "{{message}}",
			icon: "{{type}}",
			buttonsStyling: !1,
			confirmButtonText: "Ok, compris !",
			customClass: {
			confirmButton:
				"btn font-weight-bold btn-light-primary",
			},
		})
		.then(function () {
			// À la suite du clique sur le bouton
		})
	{% endfor %}
{% endfor %}

</script>
{% endblock %}