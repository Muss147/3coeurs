<script type="text/javascript">
	document.addEventListener('DOMContentLoaded', function() {
        const wrapper = document.getElementById('enfants-wrapper');
        const addButton = document.getElementById('add-enfant');

        let index = wrapper.querySelectorAll('.enfant-item').length;

        addButton.addEventListener('click', function() {
            const prototype = wrapper.getAttribute('data-prototype');
            const newForm = prototype.replace(/__name__/g, index);
            const newDiv = document.createElement('div');
            newDiv.classList.add('enfant-item');
            newDiv.innerHTML = newForm + '<button type="button" class="btn btn-danger remove-enfant">Supprimer cet enfant</button>';

            wrapper.appendChild(newDiv);

            index++;
        });

        wrapper.addEventListener('click', function(e) {
            if (e.target && e.target.classList.contains('remove-enfant')) {
                e.target.parentElement.remove();
            }
        });
    });
</script>
