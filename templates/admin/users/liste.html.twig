									<th class="w-10px pe-2">
										<div class="form-check form-check-sm form-check-custom form-check-solid me-3">
											<input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_table_users .form-check-input" value="1"/>
										</div>
									</th>
									<th class="min-w-250px">Utilisateur</th>
									<th class="min-w-125px">Rôle</th>
									<th class="max-w-100px">Dernière connexion</th>
									<th class="max-w-100px">Statut</th>
									<th class="min-w-125px">Date</th>
									<th class="text-end min-w-100px">Actions</th>
								</tr>
							</thead>
							<tbody class="text-gray-600 fw-semibold">
                                {% for user in users %}
								<tr>
									<td>
										<div class="form-check form-check-sm form-check-custom form-check-solid">
											<input class="form-check-input" type="checkbox" value="{{user.id}}"/>
										</div>
									</td>
									<td
										class="d-flex align-items-center">
										<!--begin:: Avatar -->
										<div class="symbol symbol-circle symbol-50px overflow-hidden me-3">
											<a href="{{ path('details_user', {'user': user.id}) }}">
                                                {% if user.avatar %}
												<div class="symbol-label">
													<img src="{{asset(user.avatar.filename)}}" alt="{{user.nomComplet}}" class="w-100"/>
												</div>
                                                {% else %}
                                                <div class="symbol-label fs-3 bg-light-danger text-danger">
													{{user.nomComplet|slice(0,1)|upper}}
												</div>
                                                {% endif %}
											</a>
										</div>
										<!--end::Avatar-->
										<!--begin::User details-->
										<div class="d-flex flex-column">
											<a href="{{ path('details_user', {'user': user.id}) }}" class="text-gray-800 text-hover-primary mb-1">{{user.nomComplet}}</a>
											<span>{{user.email}}</span>
										</div>
										<!--begin::User details-->
									</td>
									<td>
										{{user.role.libelle}}
									</td>
									<td>
										{% if user.lastLogin %}<div class="badge badge-light fw-bold">{{user.lastLogin|time_ago}}</div>{% endif %}
									</td>
									<td>
										{% if user.activated %}<div class="badge badge-light-success fw-bold">Actif</div>
										{% else %}<div class="badge badge-light-danger fw-bold">Bloqué</div>{% endif %}
									</td>
									<td>
										{{ user.createdAt ? user.createdAt|date('d-m-Y H:i:s') : '' }}
									</td>
									<td class="text-end">
										<a href="#" class="btn btn-light btn-active-light-primary btn-flex btn-center btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
											Actions
											<i class="ki-duotone ki-down fs-5 ms-1"></i>
										</a>
										<!--begin::Menu-->
										<div
											class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
											<!--begin::Menu item-->
											<div class="menu-item px-3">
												<a href="{{ path('details_user', {'user': user.id}) }}" class="menu-link px-3">
													Modifier
												</a>
											</div>
											<!--end::Menu item-->

											{% if not user.isActivated %}
											<!--begin::Menu item-->
											<div class="menu-item px-3">
												<a href="{{ path('details_user', {'user': user.id}) }}" class="menu-link px-3">
													Activation...
												</a>
											</div>
											<!--end::Menu item-->
											{% endif %}

											<!--begin::Menu item-->
											<form class="menu-item px-3" method="post" action="{{ path('delete_user', {'user': user.id}) }}">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
												<a href="#" class="menu-link px-3" data-kt-users-table-filter="delete_row">
													Supprimer
												</a>
											</form>
											<!--end::Menu item-->
										</div>
										<!--end::Menu-->
									</td>
								</tr>
                                {% endfor %}
							</tbody>
						</table>
						<!--end::Table-->
					</div>
					<!--end::Card body-->
				</div>
				<!--end::Card-->
			</div>
			<!--end::Container-->
		</div>
		<!--end::Post-->
	</div>
{% endblock %}

